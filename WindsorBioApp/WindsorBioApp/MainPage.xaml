<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WindsorBioApp"
             x:Class="WindsorBioApp.MainPage">

    <StackLayout BackgroundColor="DarkGray" Spacing="2">
       
            <Label Text="Windsor" 
               HorizontalOptions="Fill"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="DarkOrange"
               BackgroundColor="Black"
               HeightRequest="150"
               FontSize="50"
           />
        <Grid RowSpacing="2" ColumnSpacing="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <BoxView
                HorizontalOptions="Fill"
                VerticalOptions="FillAndExpand"
                BackgroundColor="Green"
                Grid.Column="1"
                Grid.Row="0"
                HeightRequest="200"
                x:Name="AboutMeLabel"
                
            />

            <Label Text="About Me"
                   HorizontalOptions="Fill"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="Black"
                   HorizontalTextAlignment="End"
                   TextColor="DarkOrange"
                   Grid.Column="1"
                   Grid.Row="0"
                   FontSize="35"
                   HeightRequest="200"
                   VerticalTextAlignment="Center"
           />
            <Label Text="Skills"
                   HorizontalOptions="Fill"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="Black"
                   HorizontalTextAlignment="End"
                   TextColor="DarkOrange"
                   Grid.Column="1"
                   Grid.Row="1"
                   FontSize="35"
                   HeightRequest="200"
                   VerticalTextAlignment="Center"
           />
            <Label Text="Contact me"
                   HorizontalOptions="Fill"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="Black"
                   HorizontalTextAlignment="End"
                   TextColor="DarkOrange"
                   Grid.Column="1"
                   Grid.Row="2"
                   FontSize="35"
                   HeightRequest="200"
                   VerticalTextAlignment="Center"
           />
            <Button
                BackgroundColor="DarkOrange"
                Grid.Column="0"
                Grid.Row="0"
                x:Name="NavigationButton"
                Clicked="NavigationButton_Clicked"
            />

            <Image x:Name="AboutMeIcon"
                Source="C:\Users\Andrew\Pictures\AboutMeApp\AboutMeIcon.png"
                Grid.Column="0"
                Grid.Row="0">
                <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1"/>
                   </Image.GestureRecognizers>
            </Image>

            <Button
                BackgroundColor="DarkOrange"
                Grid.Column="0"
                Grid.Row="1"
            />

            <Image x:Name="SkillsIcon"
                Source="C:\Users\Andrew\Pictures\AboutMeApp\SkillsIcon.png"
                Grid.Column="0"
                Grid.Row="1">
            </Image>

            <Button
                BackgroundColor="DarkOrange"
                Grid.Column="0"
                Grid.Row="2"
            />

            <Image x:Name="ConatctMeIcon"
                Source="C:\Users\Andrew\Pictures\AboutMeApp\ContactMeIcon.png"
                Grid.Column="0"
                Grid.Row="2">
            </Image>

        </Grid>
    </StackLayout>

</ContentPage>
